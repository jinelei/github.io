<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DeviceScanActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/device_scan_title_layout"
            android:background="@color/colorForegroundColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_size">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/title_size"
                  android:text="@string/scan_device"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:id="@+id/device_scan_title"/>

        <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/device_scan_title_btn"
                android:src="@mipmap/ic_add"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:paddingRight="8dp"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:background="@color/colorForegroundColor"
            app:layout_constraintTop_toBottomOf="@id/device_scan_title_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1dp"
            android:id="@+id/device_scan_info_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <android.support.v7.widget.RecyclerView
                android:visibility="invisible"
                android:overScrollMode="never"
                android:id="@+id/device_scan_info_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:textAlignment="center"
                android:id="@+id/device_scan_info_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:text="@string/nothing_click_to_refresh"
                app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>