<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include android:id="@+id/user_title_layout" layout="@layout/navigation_header_layout"/>

    <android.support.constraint.ConstraintLayout
            android:layout_marginTop="@dimen/default_margin_top"
            android:background="@color/colorForegroundColor"
            app:layout_constraintTop_toBottomOf="@id/user_title_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="25dp"
            android:id="@+id/user_info_layout"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/user_header_icon"
                android:layout_width="@dimen/header_icon_size"
                android:layout_height="@dimen/header_icon_size"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"/>

        <TextView
                android:id="@+id/user_header_info"
                app:layout_constraintLeft_toRightOf="@id/user_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
                android:id="@+id/list_menu_rta"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="8dp"
                android:src="@mipmap/ic_right"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:background="@color/colorForegroundColor"
            app:layout_constraintTop_toBottomOf="@id/user_info_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="1dp"
            android:id="@+id/grid_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <android.support.v7.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/grid_menu_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_marginTop="@dimen/default_margin_top"
            android:background="@color/colorForegroundColor"
            app:layout_constraintTop_toBottomOf="@id/grid_menu_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/list_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/list_menu_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>